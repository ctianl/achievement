/* pages/bgImg/bgImg.wxss */
.img {
    width: 100vw;
    height: 170px;
    margin: auto;
    box-sizing: border-box;
    padding: 0;
    margin-bottom: 50rpx;
}

.img image {
    width: 100%;
    height: 100%;
}

#btns {
    margin: auto;
    width: 550rpx;
    display: flex;
    justify-content: space-between;
}

.btn {
    width: 250rpx !important;
    border-radius: 20rpx;
    padding: 0;
    height: 80rpx;
    font-size: 35rpx;
    line-height: 80rpx;
    display: inline-block;
}

#choose {
    color: white;
    background: #5677fc;

}

#default {
    background: white;
    color: rgba(0, 0, 0, 0.678);
    border: 1px solid gray;
}

page {
    height: 100%;
    box-sizing: border-box;
}
